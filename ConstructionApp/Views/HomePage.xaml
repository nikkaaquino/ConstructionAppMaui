<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             x:Class="ConstructionApp.Pages.HomePage"
             xmlns:vm="clr-namespace:ConstructionApp.ViewModel"
             x:DataType="vm:HomeViewModel"
             NavigationPage.HasBackButton="false"
             Title="HomePage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="View Captured Photos" 
                     Clicked="OnPhotoListClicked"/>
    </ContentPage.ToolbarItems>

    <ScrollView>

        <VerticalStackLayout
         Spacing="25"
        Padding="30,0"
        VerticalOptions="Fill"
        HorizontalOptions="Fill">

            <Button Text="Open Camera" Clicked="Button_Clicked"/>

            <Image  x:Name="myImage" WidthRequest="200" HeightRequest="200"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>