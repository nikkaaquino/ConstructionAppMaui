<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             x:Class="ConstructionApp.Views.HomePage"
             xmlns:vm="clr-namespace:ConstructionApp.ViewModel"
             x:DataType="vm:HomeViewModel"
             NavigationPage.HasBackButton="false"
             Title="HomePage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Logout" 
                     Command="{Binding LogoutCommand}"/>
    </ContentPage.ToolbarItems>

    <ScrollView>

        <VerticalStackLayout
         Spacing="25"
        Padding="30,0"
        VerticalOptions="Fill"
        HorizontalOptions="Fill">

            <Image x:Name="TakePhotoImage"
                      Source="{Binding CompletePhotoPath,Mode=TwoWay}" 
                      IsVisible="{Binding HasPhoto}"
                      HeightRequest="450" 
                      VerticalOptions="FillAndExpand"/>

            <Button x:Name="TakePhoto"
                       BackgroundColor="{StaticResource PrimaryBrush}"
                       Command="{Binding CapturePhotoCommand}"
                       Text="Capture Photo"
                       TextColor="{StaticResource White}"/> 


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>