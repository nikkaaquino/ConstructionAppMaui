<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cv="clr-namespace:Camera.MAUI;assembly=Camera.MAUI"
             x:Class="ConstructionApp.Views.HomePage"
             xmlns:vm="clr-namespace:ConstructionApp.ViewModel"
             x:DataType="vm:HomeViewModel"
             NavigationPage.HasBackButton="false"
             Title="HomePage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Logout" 
                     Command="{Binding TapCommand}"/>
    </ContentPage.ToolbarItems>

    <ScrollView>

        <VerticalStackLayout
         Spacing="25"
        Padding="30,0"
        VerticalOptions="Fill"
        HorizontalOptions="Fill">

            <cv:CameraView x:Name="cameraView" WidthRequest="300" HeightRequest="300" Cameras ="{Binding ViewCameraCommand}"/>

            <Button Text="Smile!" Command="{Binding CapturePhotoCommand}"/>

            <Image Source="{Binding ImgSrc}" WidthRequest="200" HeightRequest="200" />

            <Button Margin="20" Text="Save Photo" Command="{Binding SavePhotoCommand}"/>
            <Button Margin="20" Text="Open Camera" Command="{Binding CaptureCommand}"/>
            <Button Margin="20" Text="View Captured Photos" Command="{Binding GoToPhotoDetailsCommand}"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>